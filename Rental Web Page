document.addEventListener('DOMContentLoaded', () => {
    const rentalList = document.getElementById('rentalList');

    const rentals = [
        { id: 1, name: 'Cozy Apartment', description: 'A cozy apartment in the city center.', price: '짜120000/month' },
        { id: 2, name: 'Beach House', description: 'A beautiful house by the beach.', price: '짜250000/month' },
        { id: 3, name: 'Lavish House', description: 'A Lavish house with semi furnished.', price: '짜200000/month' },
        { id: 4, name: 'Mountain Cabin', description: 'A cabin with a stunning mountain view.', price: '짜180000/month' }
    ];

    function renderRentals() {
        rentalList.innerHTML = '';
        rentals.forEach(rental => {
            const rentalItem = document.createElement('div');
            rentalItem.className = 'rental-item';
            rentalItem.innerHTML = `
                <h3>${rental.name}</h3>
                <p>${rental.description}</p>
                <p><strong>${rental.price}</strong></p>
            `;
            rentalList.appendChild(rentalItem);
        });
    }

    renderRentals();

    const searchForm = document.getElementById('searchForm');
    searchForm.addEventListener('submit', (event) => {
        event.preventDefault();
        const searchInput = document.getElementById('searchInput').value.toLowerCase();
        const filteredRentals = rentals.filter(rental => rental.name.toLowerCase().includes(searchInput));
        renderFilteredRentals(filteredRentals);
    });

    function renderFilteredRentals(filteredRentals) {
        rentalList.innerHTML = '';
        filteredRentals.forEach(rental => {
            const rentalItem = document.createElement('div');
            rentalItem.className = 'rental-item';
            rentalItem.innerHTML = `
                <h3>${rental.name}</h3>
                <p>${rental.description}</p>
                <p><strong>${rental.price}</strong></p>
            `;
            rentalList.appendChild(rentalItem);
        });
    }
});
